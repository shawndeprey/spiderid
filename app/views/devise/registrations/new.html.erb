<div class="row" id="search">
  <div class="span6 offset3">
		<h2>Sign up</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= f.error_notification %>
			<table class="form_table">
				<tr>
					<td><%= f.input :first_name, :required => true, :autofocus => true %></td>
					<td><%= f.input :last_name %></td>
				</tr>
				<tr>
					<td><%= f.input :email, :required => true %></td>
					<td><%= f.input :title %></td>
				</tr>
				<tr>
					<td><%= f.input :password, :required => true %></td>
					<td><%= f.input :password_confirmation, :required => true %></td>
				</tr>
				<tr>
					<td colspan="2"><%= f.button :submit, "Sign up" %></td>
				</tr>
				<tr>
					<td colspan="2"><%= render "devise/shared/links" %></td>
				</tr>
			</table>
		<% end %>
		
	</div>
</div>