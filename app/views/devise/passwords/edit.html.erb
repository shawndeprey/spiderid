<div class="row" id="search">
  <div class="span6 offset3">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, :as => :hidden %>
      <%= f.full_error :reset_password_token %>
      <table class="form_table">
        <tr>
          <td colspan="2"><%= f.input :password, :label => "New password", :required => true, :autofocus => true %></td>
        </tr>
        <tr>
          <td colspan="2"><%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %></td>
        </tr>
        <tr>
          <td colspan="2"><%= f.button :submit, "Change my password" %></td>
        </tr>
        <tr>
          <td colspan="2"><%= render "devise/shared/links" %></td>
        </tr>
      </table>
    <% end %>
    
  </div>
</div>